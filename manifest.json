{
  "name": "My tookit for Chrome",
  "version": "0.1",
  "description": "An extension that helps improve your web-surfing experience",
  "content_scripts": [{
		"matches": ["*://*/*"],
		"js": ["lib/jquery-1.11.2.min.js", "main.js"],
		"run_at": "document_start"
	}],  
  "background": {"scripts": ["background.js"] }, 
  "manifest_version": 2,
  "permissions": ["tabs", "contextMenus", "unlimitedStorage", "cookies", "http://*/*", "https://*/*", "file:///*"],
  "icons" : {
    	"16" : "media/icon-16.png",
    	"48" : "media/icon-48.png",
    	"128" : "media/icon-128.png"
	} 
}
